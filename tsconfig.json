{
    "compilerOptions": {
        "module": "commonjs",
        "allowJs": false,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "target": "es6",
        "rootDir": "src",
        "outDir": "dist",
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "forceConsistentCasingInFileNames": true,
        "noEmitOnError": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "skipLibCheck": true,
        "strictNullChecks": true
    },
    "include": [
        "src/**/*.ts",
        "typings/*.d.ts"
    ]
}