{
    "extends": "tslint:recommended",
    "rules": {
        "max-line-length": [false, 520],
        "whitespace": [
            true,
            "check-branch",
            "check-decl",
            "check-operator",
            "check-separator",
            "check-type",
            "check-module"
        ],
        "no-empty": false,
        "trailing-comma": [
            false
        ],
        "object-literal-sort-keys": false,
        "typedef": [
            true,
            "call-signature",
            "parameter"
        ],
        "variable-name": [
            false,
            "allow-leading-underscore",
            "allow-pascal-case"
        ],
        "use-strict": [
            true
        ],
        "semicolon": [
            false
        ],
        "no-console": [
            false
        ],
        "class-name": false
    }
}
